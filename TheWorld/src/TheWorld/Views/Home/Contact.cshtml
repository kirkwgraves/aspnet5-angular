@model TheWorld.ViewModels.ContactViewModel
@{
    ViewData["Title"] = "Contact Us";
}
@section scripts{
  <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
  <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2>Contact</h2>
    <form method="post">
      @if (ViewBag.Message != null)
      {
          <div>@ViewBag.Message</div>
      }
      <div asp-validation-summary="ValidationSummary.ModelOnly"></div>
      <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-muted"></span>
      </div>
      <div class="form-group">
        <label asp-for="Email">Email</label>
        <input class="form-control" asp-for="Email" type="email" />
        <span asp-validation-for="Email" class="text-muted"></span>
      </div>
      <div>
        <label asp-for="Message">Message</label>
        <textarea class="form-control" asp-for="Message" cols="40" rows="4"></textarea>
        <span asp-validation-for="Message" class="text-muted"></span>
      </div>
      <br />
      <div class="form-group">
        <a asp-controller="Home" asp-action="Index" class="btn btn-default">Cancel</a>
        <input class="btn btn-success" type="submit" value="Send Message" />
      </div>
    </form>
  </div>
</div>